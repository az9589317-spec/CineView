/**
 * @fileoverview Firestore Security Rules for CineView.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data
 * (watchlists, recommendations). Public content (movies, series, content summaries)
 * is generally readable. Write access to the movies collection is restricted to
 * authenticated users who are designated as admins via their email.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.email in {
        'jupiterbania472@gmail.com': true,
        'az9589317@gmail.com': true
      };
    }

    match /users/{userId} {
      allow get: if true;
      allow list: if false; // Disallow listing all users.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update, delete: if isOwner(userId);
    }

    /**
     * @description Allows anyone to read movie details.
     * Write operations are restricted to designated admin users.
     */
    match /movies/{movieId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /series/{seriesId} {
      allow get, list: if true;
      allow create, update, delete: if false; 
    }

    match /series/{seriesId}/episodes/{episodeId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    match /users/{userId}/watchlists/{watchlistId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/recommendations/{recommendationId} {
      allow read, write: if isOwner(userId);
    }

    match /contentSummaries/{contentSummaryId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
